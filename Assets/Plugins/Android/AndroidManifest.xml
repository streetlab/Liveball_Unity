<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.streetlab.tuby"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="21" />
    
    <!-- GCM 퍼미션 -->
    <permission 
        android:name="com.streetlab.tuby.permission.C2D_MESSAGE" 
        android:protectionLevel="signature" /> 
    <uses-permission android:name="com.streetlab.tuby.permission.C2D_MESSAGE" />
    <!-- GCM 리시버 퍼미션 -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE"/>
    <uses-permission android:name="com.google.android.c2dm.permission.REGISTRATION"/>
    <!-- 구글 계정 퍼미션 -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <!-- 메시지 수신시 wake up을 위한 퍼미션 -->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <!-- 인터넷 접속 퍼미션 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 진동을 위한 퍼미션 -->
    <uses-permission android:name="android.permission.VIBRATE"/>
    <!-- 인앱결제. -->
    <uses-permission android:name="com.android.vending.BILLING" />
    <!-- running tasks info -->
	<uses-permission android:name="android.permission.GET_TASKS" />
	<!-- for gallery -->	
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- etc -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:windowSoftInputMode="adjustResize" >
                
        <activity
            android:name="com.streetlab.tuby.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.prime31.GoogleIABProxyActivity" 
            android:configChanges="orientation|keyboard|keyboardHidden|screenLayout|uiMode" 
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen"></activity>
        
        <!-- igaworks -->        
        <meta-data android:name="igaworks_app_key" android:value="674039673" />
		<meta-data android:name="igaworks_hash_key" android:value="123d667c128044bc" />
        
        <!-- 
        <activity android:name="com.facebook.LoginActivity"
                  android:theme="@android:style/Theme.Translucent.NoTitleBar"
                  android:label="@string/app_name" />
        <meta-data android:name="com.facebook.sdk.ApplicationId"
             android:value="859064414154050"/>
         -->
         <!-- GCM 리시버 -->
        <receiver
            android:name="com.streetlab.tuby.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE"/>
                <action android:name="com.google.android.c2dm.intent.REGISTRATION"/>
                <category android:name="com.streetlab.tuby"/>
            </intent-filter>
        </receiver>
        <!-- GCM 리시버에서 돌리는 서비스 -->
        <service android:name="com.streetlab.tuby.GCMIntentService"></service>
        
        <!-- install receiver -->
        <receiver android:name="com.streetlab.tuby.TubyReceiver" android:exported="true">
		   <intent-filter>
		       <action android:name="com.android.vending.INSTALL_REFERRER"/>
		   </intent-filter>
		</receiver>
        
        
        
    </application>
</manifest>
